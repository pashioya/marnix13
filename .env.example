# Marnix 13 Configuration
# Copy this file to .env.local and update the values

# App Configuration
NEXT_PUBLIC_PRODUCT_NAME="Marnix 13"
NEXT_PUBLIC_SITE_TITLE="Marnix 13 - Home Server Portal"
NEXT_PUBLIC_SITE_DESCRIPTION="Unified portal for your self-hosted services"
NEXT_PUBLIC_SITE_URL="http://localhost:3000"
NEXT_PUBLIC_DEFAULT_LOCALE="en"

# Service URLs - Update these to match your actual service locations
NEXT_PUBLIC_JELLYFIN_URL="http://localhost:8096"
NEXT_PUBLIC_NEXTCLOUD_URL="http://localhost:8080"
NEXT_PUBLIC_RADARR_URL="http://localhost:7878"
NEXT_PUBLIC_SONARR_URL="http://localhost:8989"
NEXT_PUBLIC_MANGA_READER_URL="http://localhost:9000"

# Service API Keys (for auto-provisioning)
JELLYFIN_API_KEY="your-jellyfin-api-key"
NEXTCLOUD_API_KEY="your-nextcloud-api-key"
RADARR_API_KEY="your-radarr-api-key"
SONARR_API_KEY="your-sonarr-api-key"

# Supabase Configuration (required for authentication)
NEXT_PUBLIC_SUPABASE_URL="your-supabase-url"
NEXT_PUBLIC_SUPABASE_ANON_KEY="your-supabase-anon-key"
SUPABASE_SERVICE_ROLE_KEY="your-supabase-service-role-key"

# Email Configuration (for notifications)
SMTP_HOST="your-smtp-host"
SMTP_PORT="587"
SMTP_USER="your-smtp-user"
SMTP_PASS="your-smtp-password"
